@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
    Layout = "_Layout";
}


<div class="row d-xl-flex justify-content-xl-center">
    <div class="col-lg-7">
        <div class="p-5">
            <div class="text-center">
                <h4 class="text-dark mb-4">Resend Email Confirmation</h4>
            </div>
            <form method="post" class="user">
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                <div class="mb-3">
                    <input asp-for="Input.Email" class="form-control form-control-user" aria-required="true" placeholder="Your Email Address"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary d-block btn-user w-100">Resend</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
