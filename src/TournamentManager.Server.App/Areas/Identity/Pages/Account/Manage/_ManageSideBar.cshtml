@using TournamentManager.Server.Auth.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<nav class="navbar navbar-light p-0">
    <div class="container-fluid">
        <ul class="navbar-nav">
            <li class="nav-item my-2"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" asp-page="./Index"><i class="fas fa-user me-2"></i><span>Profile</span></a></li>
            <li class="nav-item my-2"><a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" asp-page="./Email"><i class="fas fa-envelope me-2"></i><span>Email</span></a></li>
            <li class="nav-item my-2"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" asp-page="./ChangePassword"><i class="fas fa-lock me-2"></i><span>Password</span></a></li>
            @if (hasExternalLogins)
            {
                <li class="nav-item my-2"><a class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins"><i class="fas fa-external-link-square-alt me-2"></i><span>External logins</span></a></li>
            }
            <li class="nav-item my-2"><a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" asp-page="./TwoFactorAuthentication"><i class="fas fa-mobile me-2"></i><span>Two-factor authentication</span></a></li>
            <li class="nav-item my-2"><a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" asp-page="./PersonalData"><i class="fas fa-address-card me-2"></i><span>Personal data</span></a></li>
        </ul>
    </div>
</nav>
